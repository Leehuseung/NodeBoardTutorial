                    <button id="btnWrite" type="button" class="btn btn-primary" style="margin-right: 30px;">글쓰기</button>
                    시작일:<input style="width:120px;" type="text" readonly="readonly" id="datepickerStart" name="datepickerStart" class="form-control">
                    종료일:<input style="width:120px; margin-right: 30px;" type="text" readonly="readonly" id="datepickerEnd" name="datepickerEnd" class="form-control">
